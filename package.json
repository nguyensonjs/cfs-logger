    "release:major": "npm version major && git push origin main --tags"
  },
  "keywords": [
    "logger",
    "typescript",
    "json",
    "console",
    "file",
    "colorful",
    "nodejs",
    "chalk",
    "logging"
  ],
  "author": {
    "name": "nguyensonjs",
    "email": "nhson.codes@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nguyensonjs/cfs-logger.git"
  },
  "bugs": {
    "url": "https://github.com/nguyensonjs/cfs-logger/issues"
  },
  "homepage": "https://github.com/nguyensonjs/cfs-logger#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "typescript": "^5.5.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
