{
  "name": "cfs-logger",
  "version": "2.0.0",
  "description": "Simple colorful JSON logger for Node.js projects",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
